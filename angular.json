{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "javaGalaxy": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/javaGalaxy/browser",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/robots.txt",
              "src/sitemap.xml"
            ],
            "styles": [
              "./node_modules/aos/dist/aos.css",
              "src/styles.scss"
            ],
            "scripts": [
              "./node_modules/aos/dist/aos.js"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1400kb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "16kb",
                  "maximumError": "18kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "javaGalaxy:build:production"
            },
            "development": {
              "browserTarget": "javaGalaxy:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "javaGalaxy:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/javaGalaxy/server",
            "main": "src/main.server.ts",
            "tsConfig": "tsconfig.server.json",
            "inlineStyleLanguage": "scss"
          },
          "configurations": {
            "production": {
              "outputHashing": "media",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "extractLicenses": false
            }
          },
          "defaultConfiguration": "production"
        },
        "serve-ssr": {
          "builder": "@nguniversal/builders:ssr-dev-server",
          "configurations": {
            "development": {
              "browserTarget": "javaGalaxy:build:development",
              "serverTarget": "javaGalaxy:server:development",
              "prerenderTarget": "javaGalaxy:prerender:production"
            },
            "production": {
              "browserTarget": "javaGalaxy:build:production",
              "serverTarget": "javaGalaxy:server:production",
              "prerenderTarget": "javaGalaxy:prerender:production"
            }
          },
          "defaultConfiguration": "development"
        },
        "prerender": {
          "builder": "@nguniversal/builders:prerender",
          "options": {            
            "routes": [
              "/home",       

              "/info/about",
              "/info/contact",

              "/code/lang/it",    
              "/code/lang/en",   
              
              "/code/Java-base/chapter/1/lang/it",
              "/code/Java-base/chapter/1/subchapter/1.1/lang/it",
              "/code/Java-base/chapter/1/subchapter/1.2/lang/it",
              "/code/Java-base/chapter/1/subchapter/1.3/lang/it",
              "/code/Java-base/chapter/1/subchapter/1.4/lang/it",
              "/code/Java-base/chapter/1/subchapter/1.5/lang/it",              
              
              "/code/Basic-Java/chapter/1/lang/en",
              "/code/Basic-Java/chapter/1/subchapter/1.1/lang/en",
              "/code/Basic-Java/chapter/1/subchapter/1.2/lang/en",
              "/code/Basic-Java/chapter/1/subchapter/1.3/lang/en",
              "/code/Basic-Java/chapter/1/subchapter/1.4/lang/en",
              "/code/Basic-Java/chapter/1/subchapter/1.5/lang/en",

              "/code/Java-base/chapter/2/lang/it",
              "/code/Java-base/chapter/2/subchapter/2.1/lang/it",
              "/code/Java-base/chapter/2/subchapter/2.2/lang/it",
              "/code/Java-base/chapter/2/subchapter/2.3/lang/it",
              "/code/Java-base/chapter/2/subchapter/2.4/lang/it",
              "/code/Java-base/chapter/2/subchapter/2.5/lang/it",

              "/code/Basic-Java/chapter/2/lang/en",
              "/code/Basic-Java/chapter/2/subchapter/2.1/lang/en",
              "/code/Basic-Java/chapter/2/subchapter/2.2/lang/en",
              "/code/Basic-Java/chapter/2/subchapter/2.3/lang/en",
              "/code/Basic-Java/chapter/2/subchapter/2.4/lang/en",
              "/code/Basic-Java/chapter/2/subchapter/2.5/lang/en",

              "/code/Java-base/chapter/3/lang/it",
              "/code/Java-base/chapter/3/subchapter/3.1/lang/it",
              "/code/Java-base/chapter/3/subchapter/3.2/lang/it",
              "/code/Java-base/chapter/3/subchapter/3.3/lang/it",
              "/code/Java-base/chapter/3/subchapter/3.4/lang/it",
              "/code/Java-base/chapter/3/subchapter/3.5/lang/it",
              "/code/Java-base/chapter/3/subchapter/3.6/lang/it",
              "/code/Java-base/chapter/3/subchapter/3.7/lang/it",
              "/code/Java-base/chapter/3/subchapter/3.8/lang/it",

              "/code/Basic-Java/chapter/3/lang/en",
              "/code/Basic-Java/chapter/3/subchapter/3.1/lang/en",
              "/code/Basic-Java/chapter/3/subchapter/3.2/lang/en",
              "/code/Basic-Java/chapter/3/subchapter/3.3/lang/en",
              "/code/Basic-Java/chapter/3/subchapter/3.4/lang/en",
              "/code/Basic-Java/chapter/3/subchapter/3.5/lang/en",
              "/code/Basic-Java/chapter/3/subchapter/3.6/lang/en",
              "/code/Basic-Java/chapter/3/subchapter/3.7/lang/en",
              "/code/Basic-Java/chapter/3/subchapter/3.8/lang/en"
            ]
          },
          "configurations": {
            "production": {
              "browserTarget": "javaGalaxy:build:production",
              "serverTarget": "javaGalaxy:server:production"
            },
            "development": {
              "browserTarget": "javaGalaxy:build:development",
              "serverTarget": "javaGalaxy:server:development"
            }
          },
          "defaultConfiguration": "production"
        },
        "deploy": {
          "builder": "@angular/fire:deploy",
          "options": {           
            "browserTarget": "javaGalaxy:build:production",            
            "prerenderTarget": "javaGalaxy:prerender:production"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}